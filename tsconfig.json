{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "inlineSources": true,
    "declaration": true,
    "noImplicitAny": true, // may change
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true, // may change
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.tests.ts"]
}
